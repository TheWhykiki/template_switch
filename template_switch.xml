<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="system" method="upgrade">
	<name>plg_system_template_switch</name>
	<author>Kiki Schueling</author>
	<creationDate>March 2021</creationDate>
	<authorEmail>info@whykiki.de</authorEmail>
	<authorUrl>whykiki.de</authorUrl>
	<version>1.0.0</version>
	<description>PLG_TEMPLATE_SWITCH_XML_DESCRIPTION</description>
	<files>
		<filename plugin="template_switch">template_switch.php</filename>
    <folder>layouts</folder>
    <folder>assets</folder>
    <folder>language</folder>
	</files>
  <languages folder="language">
    <language tag="en-GB">en-GB.plg_system_template_switch.ini</language>
    <language tag="en-GB">en-GB.plg_system_template_switch.sys.ini</language>
    <language tag="de-DE">de-DE.plg_system_template_switch.ini</language>
    <language tag="de-DE">de-DE.plg_system_template_switch.sys.ini</language>
  </languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
				  name="theme"
				  type="text"
				  label="Standardtheme (kleingeschrieben)"
				  />
				<field
				  name="theme_id"
				  type="text"
				  label="Standardtheme ID"
				  />
				<field
				  name="themeAlternative"
				  type="text"
				  label="Theme Alternative (kleingeschrieben)"
				  />
				<field
				  name="themeAlternative_id"
				  type="text"
				  label="Theme Alternative ID"
				  />
			</fieldset>
		</fields>
	</config>
</extension>
